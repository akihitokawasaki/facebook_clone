<h1>お気に入り一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>
    <th>投稿者</th>
  </tr>
<% @favorites.each do |favorite| %>
  <tr>
    <td><%= favorite.blog.title %></td>
    <td><%= favorite.blog.content %></td>
    <td><%= image_tag favorite.blog.image.url if favorite.blog.image.url %></td>
    <td><%= favorite.blog.user.name %></td>
    <td><%= link_to '詳細を確認する', blog_path(favorite.blog.id) %></td>

  </tr>
<% end %>

</table>
  <%= link_to "ユーザーページに戻る", user_path(current_user.id) %>
